---
import { Image } from 'astro:assets'

const {
	imgFile,
	alt,
} = Astro.props
---

<figure class='image is-128x128'>
	<Image
		src={`/images/headshots/${imgFile}.jpg`}
		alt={alt}
		width={128}
		height={128}
		class='is-rounded'
		loading='lazy'
		format='webp'
	/>
</figure>

<style lang='sass' scoped>
img
	width: 100%
	height: 100%
	object-fit: cover
</style>
